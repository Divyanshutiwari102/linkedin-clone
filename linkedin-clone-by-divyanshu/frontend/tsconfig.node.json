{
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "tsBuildInfoFile": "frontend/node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",

    /* âœ… Fix: use bundler mode for modern imports */
    "moduleResolution": "bundler",

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["vite.config.ts"]
}
